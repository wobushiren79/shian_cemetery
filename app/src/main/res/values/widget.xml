<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ListItemTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginLeft">@dimen/dimen_16dp</item>
        <item name="android:textColor">@color/dimgray</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ems">6</item>
    </style>

    <style name="ListItemContent" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginLeft">@dimen/dimen_16dp</item>
        <item name="android:textColor">@color/zhy_text_color_9</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ListItemButton_1" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginLeft">@dimen/dimen_28dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_28dp</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/zhy_button_state_5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ListItemButton_2" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginLeft">@dimen/dimen_28dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_28dp</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:textColor">@color/zhy_text_color_1</item>
        <item name="android:background">@drawable/zhy_button_state_2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="orderlist_item_btn_textStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#7b5237</item>
        <item name="android:textSize">@dimen/dimen_24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/zhy_button_state_6</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="zhy_button_submit_1">
        <item name="android:textSize">@dimen/dimen_32dp</item>
        <item name="android:background">@drawable/zhy_button_state_5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/dimen_688dp</item>
        <item name="android:layout_height">@dimen/dimen_80dp</item>
    </style>
    <style name="cemetery_text_style_title_1">
        <item name="android:textSize">@dimen/txtsize_32sp</item>
        <item name="android:textColor">@color/zhy_text_color_1</item>
    </style>

    <style name="AppUpdateProgressStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/appupdate_progressbar_horizontal</item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
    </style>
</resources>