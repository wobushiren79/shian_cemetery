<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zhy_button_state_item_gray"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_updata"
        android:layout_width="@dimen/dimen_260dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/zhy_button_state_item_green_line"
        android:gravity="center"
        android:text="点击上传照片"
        android:textColor="@color/zhy_text_color_1" />
</RelativeLayout>