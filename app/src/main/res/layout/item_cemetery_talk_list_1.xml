<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_text_color_3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/zhy_button_state_item_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="客户姓名" />

            <TextView
                android:id="@+id/tv_customername"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="联系电话" />

            <TextView
                android:id="@+id/tv_customerphone"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:background="@drawable/ic_qt_phone" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="预约地址" />

            <TextView
                android:id="@+id/tv_customerlocation"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="预约时间" />

            <TextView
                android:id="@+id/tv_meettime"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="horizontal">

            <TextView
                style="@style/ListItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="预约参观公墓" />

            <TextView
                android:id="@+id/tv_cemeterylocation"
                style="@style/ListItemContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_text_color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reject"
                style="@style/ListItemButton_2"
                android:layout_width="@dimen/dimen_132dp"
                android:layout_height="@dimen/dimen_66dp"
                android:text="拒单" />

            <TextView
                android:id="@+id/tv_accept"
                style="@style/ListItemButton_1"
                android:layout_width="@dimen/dimen_132dp"
                android:layout_height="@dimen/dimen_66dp"
                android:text="接单" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>