<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:DataReadAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/write_username_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者1姓名"
            DataReadAttr:isImportant="true"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/write_userage_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者1年龄"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
            android:id="@+id/write_usersex_1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者1性別"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
            android:id="@+id/write_userstate_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者1状态"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/write_usercardid_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者1身份证"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.TimeSelectViewNormal
            android:id="@+id/write_userbirth_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者1去世日期"></com.shian.app.shian_cemetery.view.dataview.cemetery.TimeSelectViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/write_username_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者2姓名"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/write_userage_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者2年龄"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
            android:id="@+id/write_usersex_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者2性別"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
            android:id="@+id/write_userstate_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者2状态"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/write_usercardid_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者2身份证"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.TimeSelectViewNormal
            android:id="@+id/write_userbirth_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="使用者2去世日期"></com.shian.app.shian_cemetery.view.dataview.cemetery.TimeSelectViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/write_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:isLonger="true"
            DataReadAttr:titleName="备注"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/dimen_266dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginBottom="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:background="@drawable/zhy_button_state_2"
            android:gravity="center"
            android:text="返回公墓信息"
            android:textColor="@color/zhy_text_color_1"
            android:textSize="@dimen/dimen_32dp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/dimen_266dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginBottom="@dimen/dimen_32dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:background="@drawable/zhy_button_state_5"
            android:gravity="center"
            android:text="填写经办人信息"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_32dp" />
    </LinearLayout>

</LinearLayout>