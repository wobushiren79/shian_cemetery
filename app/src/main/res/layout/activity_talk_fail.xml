<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:DataReadAttr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_talk_fail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shian.app.shian_cemetery.activity.cemetery.TalkFailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
                android:id="@+id/write_planbuytype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="计划购买墓型"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_3" />

            <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
                android:id="@+id/write_planbuymoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="计划购买价位"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_3" />

            <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
                android:id="@+id/write_deadman_state_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="使用者1现状"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_3" />

            <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
                android:id="@+id/write_deadman_state_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="使用者2现状"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_3" />

            <com.shian.app.shian_cemetery.view.dataview.cemetery.MapSelectViewNormal
                android:id="@+id/write_asllocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="骨灰当前所在"></com.shian.app.shian_cemetery.view.dataview.cemetery.MapSelectViewNormal>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_3" />

            <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
                android:id="@+id/write_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="联系人是使用者的"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_3" />

            <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
                android:id="@+id/write_talkpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:isLonger="true"
                DataReadAttr:titleName="洽谈要点"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_3" />

            <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
                android:id="@+id/write_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="预约情况"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/zhy_line_3" />

            <LinearLayout
                android:id="@+id/ll_other_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
                    android:id="@+id/write_traffic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    DataReadAttr:titleName="交通工具"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

                <com.shian.app.shian_cemetery.view.dataview.cemetery.TimeSelectViewNormal
                    android:id="@+id/write_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    DataReadAttr:titleName="预约时间"></com.shian.app.shian_cemetery.view.dataview.cemetery.TimeSelectViewNormal>

                <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
                    android:id="@+id/write_personnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    DataReadAttr:titleName="人数"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

                <com.shian.app.shian_cemetery.view.dataview.cemetery.MapSelectViewNormal
                    android:id="@+id/write_meetlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    DataReadAttr:titleName="预约地点"></com.shian.app.shian_cemetery.view.dataview.cemetery.MapSelectViewNormal>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/zhy_line_3" />
            </LinearLayout>

            <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
                android:id="@+id/write_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:isLonger="true"
                DataReadAttr:titleName="备注"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:textSize="@dimen/dimen_32dp"
            android:layout_width="@dimen/dimen_688dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/zhy_button_state_5"
            android:gravity="center"
            android:text="结束洽谈"
            android:textColor="@color/white" />
    </LinearLayout>


</ScrollView>
