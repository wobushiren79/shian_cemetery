<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:DataReadAttr="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_backgroud_1"
    tools:context="com.shian.app.shian_cemetery.activity.car.CarOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.shian.app.shian_cemetery.view.dataview.cemetery.TimeSelectViewNormal
            android:id="@+id/car_use_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:isImportant="true"
            DataReadAttr:titleName="预约用车时间"></com.shian.app.shian_cemetery.view.dataview.cemetery.TimeSelectViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/car_send_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:isImportant="true"
            DataReadAttr:titleName="申请人"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/car_send_person_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:isImportant="true"
            DataReadAttr:titleName="申请人电话"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/car_user_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:isImportant="true"
            DataReadAttr:titleName="用车人"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/car_user_person_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:isImportant="true"
            DataReadAttr:titleName="用车人电话"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
            android:id="@+id/car_use_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:isImportant="true"
            DataReadAttr:titleName="用车理由"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/car_personnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:isImportant="true"
            DataReadAttr:titleName="乘车人数"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.MapSelectViewNormal
            android:id="@+id/car_get_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:isImportant="true"
            DataReadAttr:titleName="预约上车地点"></com.shian.app.shian_cemetery.view.dataview.cemetery.MapSelectViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.MapSelectViewNormal
            android:id="@+id/car_arrive_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:isImportant="true"
            DataReadAttr:titleName="前往目的地"></com.shian.app.shian_cemetery.view.dataview.cemetery.MapSelectViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:background="@color/zhy_line_3" />

        <com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal
            android:id="@+id/car_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            DataReadAttr:titleName="备注"></com.shian.app.shian_cemetery.view.dataview.cemetery.EditTextViewNormal>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/zhy_line_3" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/dimen_688dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@drawable/zhy_button_state_5"
            android:gravity="center"
            android:text="提交申请"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_32dp" />
    </LinearLayout>
</ScrollView>
