<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:DataReadAttr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_burial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zhy_backgroud_1"
    tools:context="com.shian.app.shian_cemetery.activity.burial.SetteleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.shian.app.shian_cemetery.view.dataview.burial.TextReadLayout
                android:id="@+id/tr_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="墓穴位置"></com.shian.app.shian_cemetery.view.dataview.burial.TextReadLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_7" />

            <com.shian.app.shian_cemetery.view.dataview.burial.TextReadLayout
                android:id="@+id/tr_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="立碑时间"></com.shian.app.shian_cemetery.view.dataview.burial.TextReadLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_7" />

            <com.shian.app.shian_cemetery.view.dataview.burial.TextReadLayout
                android:id="@+id/tr_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="使用者姓名"></com.shian.app.shian_cemetery.view.dataview.burial.TextReadLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_7" />

            <com.shian.app.shian_cemetery.view.dataview.burial.TextReadLayout
                android:id="@+id/tr_buildtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="碑文填制日期"></com.shian.app.shian_cemetery.view.dataview.burial.TextReadLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_7" />

            <com.shian.app.shian_cemetery.view.dataview.burial.TextReadLayout
                android:id="@+id/tr_buildstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="碑文刊刻"></com.shian.app.shian_cemetery.view.dataview.burial.TextReadLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_32dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:text="墓碑照片"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_32dp" />

            <com.shian.app.shian_cemetery.view.dataview.burial.PhotoUpDataLayout
                android:layout_width="@dimen/dimen_688dp"
                android:layout_height="@dimen/dimen_300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_32dp"></com.shian.app.shian_cemetery.view.dataview.burial.PhotoUpDataLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_32dp"
                android:background="@color/zhy_line_7" />

            <com.shian.app.shian_cemetery.view.dataview.burial.EditLayout
                android:id="@+id/tr_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                DataReadAttr:titleName="备注"></com.shian.app.shian_cemetery.view.dataview.burial.EditLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/dimen_688dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/zhy_button_state_5"
            android:gravity="center"
            android:text="确认立碑"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_32dp" />
    </LinearLayout>
</ScrollView>
