<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:DataReadAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
        android:id="@+id/write_cemetery_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        DataReadAttr:isImportant="true"
        DataReadAttr:titleName="公墓名称"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

    <LinearLayout
        android:id="@+id/ll_detailslocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zhy_backgroud_1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_32dp"
                android:text="园区名称"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/dimen_28dp" />

            <ImageView
                android:id="@+id/iv_details"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:src="@drawable/zhy_icon_details" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
                android:id="@+id/write_location_garden"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                DataReadAttr:ems="1"
                DataReadAttr:isImportant="true"
                DataReadAttr:titleName="苑"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

            <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
                android:id="@+id/write_location_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                DataReadAttr:ems="1"
                DataReadAttr:isImportant="true"
                DataReadAttr:titleName="区"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
                android:id="@+id/write_location_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                DataReadAttr:ems="1"
                DataReadAttr:isImportant="true"
                DataReadAttr:titleName="排"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

            <com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal
                android:id="@+id/write_location_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                DataReadAttr:ems="1"
                DataReadAttr:isImportant="true"
                DataReadAttr:titleName="号"></com.shian.app.shian_cemetery.view.dataview.cemetery.SpinnerViewNormal>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>